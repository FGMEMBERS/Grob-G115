<?xml version="1.0"?>

<PropertyList>

  <path>WarningPanel.ac</path>

  <animation>
    <type>pick</type>
    <visible>true</visible>
    <object-name>Test</object-name>
    <action>
      <button>0</button>
      <repeatable>false</repeatable>
      <binding>
        <command>property-assign</command>
	<property>/instrumentation/warning-panel/test</property>
        <value type="int">1</value>
      </binding>          
      <mod-up>
        <binding>
          <command>property-assign</command>
	  <property>/instrumentation/warning-panel/test</property>
          <value type="int">0</value>
        </binding>          
      </mod-up>
    </action>
  </animation>                              

  <animation>
    <type>pick</type>
    <visible>false</visible>
    <object-name>Day</object-name>
    <action>
      <button>0</button>
      <repeatable>false</repeatable>
      <binding>
        <command>property-assign</command>
	<property>/instrumentation/warning-panel/night</property>
        <value type="int">0</value>
      </binding>          
    </action>
  </animation>                              

  <animation>
    <type>pick</type>
    <visible>false</visible>
    <object-name>Night</object-name>
    <action>
      <button>0</button>
      <repeatable>false</repeatable>
      <binding>
        <command>property-assign</command>
	<property>/instrumentation/warning-panel/night</property>
        <value type="int">1</value>
      </binding>          
    </action>
  </animation>                              

  <animation> 
    <type>rotate</type>
    <object-name>DayNightSwitch</object-name>
    <property>instrumentation/warning-panel/night</property>
    <factor>70</factor>
    <axis> 
      <x>-1</x>
      <y>0</y>
      <z>0</z>
    </axis>
    <center>
      <x-m>0</x-m>
      <y-m>0.0575</y-m>
      <z-m>-0.002</z-m>  
    </center>                                         
  </animation>

  <animation>
    <object-name>WarnLoVolt</object-name>
    <type>material</type>
    <emission>
      <red>1.0</red>
      <green>0.0</green>
      <blue>0.0</blue>
      <factor-prop>instrumentation/warning-panel/lovolt-norm</factor-prop>
    </emission>
  </animation>

  <animation>
    <object-name>WarnGen</object-name>
    <type>material</type>
    <emission>
      <red>1.0</red>
      <green>0.0</green>
      <blue>0.0</blue>
      <factor-prop>instrumentation/warning-panel/gen-norm</factor-prop>
    </emission>
  </animation>

  <animation>
    <object-name>WarnLoOil</object-name>
    <type>material</type>
    <emission>
      <red>1.0</red>
      <green>0.0</green>
      <blue>0.0</blue>
      <factor-prop>instrumentation/warning-panel/looil-norm</factor-prop>
    </emission>
  </animation>

  <animation>
    <object-name>WarnFuel</object-name>
    <type>material</type>
    <emission>
      <red>1.0</red>
      <green>0.0</green>
      <blue>0.0</blue>
      <factor-prop>instrumentation/warning-panel/fuel-norm</factor-prop>
    </emission>
  </animation>

  <animation>
    <object-name>WarnStarter</object-name>
    <type>material</type>
    <emission>
      <red>1.0</red>
      <green>0.0</green>
      <blue>0.0</blue>
      <factor-prop>instrumentation/warning-panel/starter-norm</factor-prop>
    </emission>
  </animation>

</PropertyList>

