<?xml version="1.0"?>

<PropertyList>

 <path>KI525A.ac</path>

 <animation>
  <type>material</type>
  <object-name>Bearing</object-name>
  <object-name>Face</object-name>
  <object-name>HdgBug</object-name>
  <object-name>HdgFlag</object-name>
  <object-name>LubberLine</object-name>
  <object-name>NavFlag</object-name>
  <object-name>OBSPtr</object-name>
  <object-name>Offset</object-name>
  <object-name>OffsetScale</object-name>
  <emission>
   <red>1.0</red>
   <green>0.2</green>
   <blue>0.0</blue>
   <factor-prop>/controls/lighting/instruments-norm</factor-prop>
  </emission>
 </animation>

 <animation>
  <type>rotate</type>
  <object-name>Bearing</object-name>
  <object-name>HdgBug</object-name>
  <object-name>OBSPtr</object-name>
  <object-name>Offset</object-name>
  <object-name>OffsetScale</object-name>
  <property>/instrumentation/heading-indicator/indicated-heading-deg</property>
  <factor>-1</factor>
  <axis>
   <x>-1</x>
   <y>0</y>
   <z>0</z>
  </axis>
 </animation>

 <animation>
  <type>rotate</type>
  <object-name>OBSPtr</object-name>
  <object-name>Offset</object-name>
  <object-name>OffsetScale</object-name>
  <property>/instrumentation/nav[0]/radials/selected-deg</property>
  <factor>-1</factor>
  <axis>
   <x>-1</x>
   <y>0</y>
   <z>0</z>
  </axis>
 </animation>

 <animation>
  <type>rotate</type>
  <object-name>HdgBug</object-name>
  <property>/autopilot/settings/heading-bug-deg</property>
  <factor>-1</factor>
  <axis>
   <x>-1</x>
   <y>0</y>
   <z>0</z>
  </axis>
 </animation>

 <animation>
  <type>pick</type>
  <object-name>OBSDec</object-name>
  <visible>false</visible>
  <action>
    <name>small decrease</name>
    <button>0</button>
    <repeatable>true</repeatable>
    <binding>
      <command>property-adjust</command>
       <property>/instrumentation/nav[0]/radials/selected-deg</property>
      <step>-1</step>
      <min>0</min>
      <max>360</max>
      <wrap>1</wrap>
    </binding>
  </action>
  <action>
    <name>large decrease</name>
    <button>1</button>
    <repeatable>true</repeatable>
    <binding>
      <command>property-adjust</command>
       <property>/instrumentation/nav[0]/radials/selected-deg</property>
      <step>-5</step>
      <min>0</min>
      <max>360</max>
      <wrap>1</wrap>
    </binding>
  </action>
 </animation>

 <animation>
  <type>pick</type>
  <object-name>OBSInc</object-name>
  <visible>false</visible>
  <action>
    <name>small increase</name>
    <button>0</button>
    <repeatable>true</repeatable>
    <binding>
      <command>property-adjust</command>
       <property>/instrumentation/nav[0]/radials/selected-deg</property>
      <step>1</step>
      <min>0</min>
      <max>360</max>
      <wrap>1</wrap>
    </binding>
  </action>
  <action>
    <name>large increase</name>
    <button>1</button>
    <repeatable>true</repeatable>
    <binding>
      <command>property-adjust</command>
       <property>/instrumentation/nav[0]/radials/selected-deg</property>
      <step>5</step>
      <min>0</min>
      <max>360</max>
      <wrap>1</wrap>
    </binding>
  </action>
 </animation>

 <animation>
  <type>pick</type>
  <object-name>HdgDec</object-name>
  <visible>false</visible>
  <action>
    <name>small decrease</name>
    <button>0</button>
    <repeatable>true</repeatable>
    <binding>
      <command>property-adjust</command>
       <property>/autopilot/settings/heading-bug-deg</property>
      <step>-1</step>
      <min>0</min>
      <max>360</max>
      <wrap>1</wrap>
    </binding>
  </action>
  <action>
    <name>large decrease</name>
    <button>1</button>
    <repeatable>true</repeatable>
    <binding>
      <command>property-adjust</command>
       <property>/autopilot/settings/heading-bug-deg</property>
      <step>-5</step>
      <min>0</min>
      <max>360</max>
      <wrap>1</wrap>
    </binding>
  </action>
 </animation>

 <animation>
  <type>pick</type>
  <object-name>HdgInc</object-name>
  <visible>false</visible>
  <action>
    <name>small increase</name>
    <button>0</button>
    <repeatable>true</repeatable>
    <binding>
      <command>property-adjust</command>
       <property>/autopilot/settings/heading-bug-deg</property>
      <step>1</step>
      <min>0</min>
      <max>360</max>
      <wrap>1</wrap>
    </binding>
  </action>
  <action>
    <name>large increase</name>
    <button>1</button>
    <repeatable>true</repeatable>
    <binding>
      <command>property-adjust</command>
       <property>/autopilot/settings/heading-bug-deg</property>
      <step>5</step>
      <min>0</min>
      <max>360</max>
      <wrap>1</wrap>
    </binding>
  </action>
 </animation>

 <animation>
  <type>rotate</type>
  <object-name>Offset</object-name>
  <property>/instrumentation/nav[0]/heading-needle-deflection</property>
  <factor>3</factor>
  <min>-30</min>
  <max>30</max>
  <center>
   <x-m>-0.03</x-m>
   <y-m>0</y-m>
   <z-m>0</z-m>
  </center>
  <axis>
   <x>0</x>
   <y>0</y>
   <z>1</z>
  </axis>
 </animation>


</PropertyList>


