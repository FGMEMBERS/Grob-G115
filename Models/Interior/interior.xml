<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

  <path>interior.ac</path>

  <animation>
    <object-name>interieur</object-name>
    <object-name>inttour</object-name>
    <object-name>inttourverriere</object-name>
    <object-name>inttourverriere2</object-name>

    <object-name>intvitres</object-name>
    <object-name>intverriere</object-name>
  </animation>

  <animation>
    <type>shader</type>
    <shader>chrome</shader>
    <texture>Aircraft/Generic/Effects/glass_shader.png</texture>
    <object-name>intvitres</object-name>
    <object-name>intverriere</object-name>
  </animation>

  <animation>
    <type>noshadow</type>
    <object-name>intvitres</object-name>
    <object-name>intverriere</object-name>
  </animation>

  <!-- Interior -->
  <model>
    <path>Aircraft/Grob-G115/Models/Interior/Panel/GrobInterior.xml</path>
    <offsets>
      <x-m> -1.8 </x-m>
      <y-m>  0.0 </y-m>
      <z-m> -0.2 </z-m>
    </offsets>
  </model>

  <!-- Pilote -->
  <model>
    <path>Aircraft/Grob-G115/Models/Pilot/pilot.xml</path>
    <offsets>
      <x-m> -1.350 </x-m>
      <y-m> -0.250 </y-m>
      <z-m> -0.277 </z-m>
    </offsets>
  </model>

  <!-- Canopy -->
  <animation>
    <name>IntCanopy</name>
    <object-name>intverriere</object-name>
    <object-name>inttourverriere</object-name>
    <object-name>inttourverriere2</object-name>
  </animation>

  <animation>
    <type>translate</type>
    <object-name>IntCanopy</object-name>
    <property>instrumentation/doors/crew/position-norm</property>
    <factor> 1 </factor>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>

</PropertyList>

